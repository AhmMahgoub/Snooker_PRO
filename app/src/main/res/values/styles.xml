<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#CA0028</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>
    </style>
    <!-- The Left Side Buttons Styles -->
    <style name="Ball_buttons_Left" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- The Right Side Buttons Styles -->
    <style name="Ball_buttons_Right" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--The Center Buttons Styles -->
    <style name="Ball_Buttons_Center" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--Player Names Styles -->
    <style name="Player_Names" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">30dp</item>
        <item name="android:textColor">#CA0028</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--Score Styles -->
    <style name="Score" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">70sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">0</item>
        <item name="android:paddingBottom">50dp</item>
    </style>
    <!--Reset Styles -->
    <style name="Reset_Button"  >
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>